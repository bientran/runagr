.main-nav {
  width: 100%;
  position: relative;
  height: 58px;
  z-index: 30;
  background: #fff;
  border-bottom: 1px solid #ccc;
  min-width: 800px;
}

.main-nav:before {
  display: block;
  position: absolute;
  height: 1px;
  top: 58px;
  left: 0px;
  right: 0px;
  background: #ccc;
  content: "";
  z-index: 0;
}

.logo {
  margin-top: 10px;
  padding: 20px;
  padding-left: 0px;
  float: left;
  width: 105px;
  height: auto;
  background: url(<%= asset_path 'logo_large_orange.png' %>);
  margin-left: 20px;
  margin-right: 20px;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.footer-logo {
  padding-left: 0px;
  margin-bottom: 10px;
  float: left;
  width: 105px;
  height: auto;

  background: url(<%= asset_path 'logo_large_grey.png' %>);
  margin: 10px 20px;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}


.main-logo {
  margin: 0 auto;
  margin-bottom: 150px;
  margin-top: 50px;
  padding: 20px;
  padding-left: 0px;
  width: 150px;
  height: auto;
  background: url(<%= asset_path 'logo_large_orange.png' %>);

  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.arrow-down {
  margin: 21px 0px 5px 3px;
  border-style: solid;
	border-width: 0.15em 0.15em 0 0;
	content: '';
	display: inline-block;
	height: 0.45em;
	left: 0.25em;
	position: relative;
	top: 0.10em;
	transform: rotate(135deg);
	width: 0.45em;
}

.nav-profile {
  float: right;
}

.nav-links {
  float: left;
  margin-right: 0px;
  margin-left: 20px;

}

.nav-link {
  position: relative;
  padding-bottom: 20px;
  border-right: 1px solid #fff;
  border-left: 1px solid #fff;
}
.nav-link > a {
  padding: 20px 20px 20px 20px;
  border-right: 1px solid transparent;
  border-left: 1px solid transparent;
  border-bottom: 1px solid #ccc;
}

.nav-link:hover .dashboard-links {
  display: block;
}
.nav-link:hover .nav-link > a {
  border-bottom: 1px solid #fff;
}
.nav-link:hover {
}
.border-hover {
  border-right: 1px solid #ccc;
  border-left: 1px solid #ccc;
}

.nav-link:hover {
  color: #FC4C02;
}
.nav-link:hover .arrow-down {
  border-top-color: #FC4C02;
}

.dashboard-links {
  border-top: 1px solid #ccc;
  display: none;
  position: absolute;
  left: -1px;
  top: 58px;
  font-size: 14px;
  white-space: nowrap;
  background: #fff;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  overflow: hidden;

}
.dash-link {
  width: 200px;
}

.dash-link > a {
  display: inline-block;
  width: 190px;
  padding: 10px 0;
  padding-left: 10px;
  padding-right: 0;
  margin: 0;
  color: #000;
}

.dash-link:hover {
  background: #F6F6F6;
}


.welcome > h5{
  left: 20px;
  position: absolute;
  top: 100px;
}
